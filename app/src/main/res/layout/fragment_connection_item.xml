<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="108dp"
    android:orientation="vertical"
    android:paddingHorizontal="8dp">

    <!-- first divider -->
    <LinearLayout
        android:id="@+id/newDateDivider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="-10dp"
        android:gravity="center_vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/text" />

        <TextView
            android:id="@+id/newDateDividerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text"
            android:paddingHorizontal="8dp"
            android:textSize="11sp"
            android:fontFamily="@font/montserrat"
            tools:ignore="SmallSp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/text" />

    </LinearLayout>

    <!-- second divider -->
    <View
        android:visibility="gone"
        android:id="@+id/dividerView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="3">

            <TextView
                android:id="@+id/departureArrival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:fontFamily="@font/montserrat_medium"
                android:text="Departure â†’ Arrival"
                android:layout_marginBottom="2dp"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/transfersTravel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Transfers and travel time"
                android:textColor="@color/text"
                android:textSize="15sp" />

<!--            <TextView-->
<!--                android:id="@+id/transportTypes"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:textColor="@color/text"-->
<!--                android:fontFamily="@font/poppins"-->
<!--                android:text="Transport types"-->
<!--                android:textSize="12sp" />-->

            <LinearLayout
                android:id="@+id/transportImagesContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
