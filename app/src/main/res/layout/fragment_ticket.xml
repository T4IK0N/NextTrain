<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".TicketFragment"
    android:id="@+id/drawerLayout"
    tools:openDrawer="end">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="40dp">

        <TextView
            android:id="@+id/appNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/orbitron_medium"
            android:text="@string/ticketsAppName"
            android:textColor="@color/text"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="@id/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:navigationIcon="@drawable/burger"
            android:theme="@style/Theme.Material3.Dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@id/appNameTextView"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/qrLinearLayout"
                android:layout_width="360dp"
                android:layout_height="360dp"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">
                <ImageView
                    android:id="@+id/qrImageView"
                    android:layout_width="175dp"
                    android:layout_height="175dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/example_qr_code"
                    android:contentDescription="@string/qr_code_preview"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/ticketNumber"
                style="@style/fontRegularStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ABC112233"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/qrLinearLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="215dp"
                app:layout_constraintTop_toBottomOf="@id/ticketNumber">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/firstSectionDividerView"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/text"/>
                    <LinearLayout
                        android:id="@+id/firstSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">
                        <TextView
                            style="@style/fontBoldStyle"
                            android:textSize="20sp"
                            android:id="@+id/route"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Warszawa - Kraków" />

                        <TextView
                            android:id="@+id/owner"
                            style="@style/fontRegularStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Właściciel: Jan Nowak" />
                    </LinearLayout>

                    <View
                        android:id="@+id/secondSectionDividerView"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/text"/>

                    <LinearLayout
                        android:id="@+id/secondSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginEnd="10dp">

                            <TextView
                                android:id="@+id/type"
                                style="@style/fontRegularStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="PRZEJAZD TAM" />

                            <TextView
                                android:id="@+id/startDate"
                                style="@style/fontRegularStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Ważny od: 13:50" />

                            <TextView
                                android:id="@+id/endDate"
                                style="@style/fontRegularStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Ważny do: 16:50" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/normalTicket"
                                style="@style/fontRegularStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat"
                                android:text="Normalny: 0"
                                android:textAlignment="textEnd" />

                            <TextView
                                android:id="@+id/reducedTicket"
                                style="@style/fontRegularStyle"
                                android:textAlignment="textEnd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Ulgowy (76): 1" />

                            <TextView
                                android:id="@+id/discount"
                                style="@style/fontRegularStyle"
                                android:textAlignment="textEnd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="DZ/UCZ 49%" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:id="@+id/thirdSectionDivider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/text"/>

                    <LinearLayout
                        android:id="@+id/thirdSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginEnd="10dp">

                            <!-- przewoźnik -->
                            <TextView
                                android:id="@+id/carrier"
                                style="@style/fontRegularStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Przewoźnik: INTERCITY" />

                            <TextView
                                android:id="@+id/trainType"
                                style="@style/fontRegularStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Typ pociągu: IC" />

                            <TextView
                                android:id="@+id/trainNumber"
                                style="@style/fontRegularStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Numer pociągu: 123456"
                                android:visibility="visible"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/price"
                                style="@style/fontRegularStyle"
                                android:textAlignment="textEnd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Cena: 50.00 PLN" />

                            <TextView
                                android:id="@+id/travelDistance"
                                style="@style/fontRegularStyle"
                                android:textAlignment="textEnd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Distance: 319 KM" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:id="@+id/fourthSectionDivider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/text"/>

                    <LinearLayout
                        android:id="@+id/fourthSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginEnd="10dp">

                            <!-- przewoźnik -->
                            <TextView
                                android:id="@+id/seatNumber"
                                style="@style/fontRegularStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Miejsca: 45 O" />

                            <TextView
                                android:id="@+id/classNumber"
                                style="@style/fontRegularStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Klasa: 2" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/trainCarNumber"
                                style="@style/fontRegularStyle"
                                android:textAlignment="textEnd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Wagon: 11" />

                            <TextView
                                android:id="@+id/trainCarType"
                                style="@style/fontRegularStyle"
                                android:textAlignment="textEnd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Typ: BP" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/burger_header"
        app:menu="@menu/burger_tickets_menu"
        android:background="@color/background_lighter"
        app:itemTextColor="@color/text"
        app:itemIconTint="@color/text"
        android:layout_gravity="start"/>
</androidx.drawerlayout.widget.DrawerLayout>